#!/bin/env bash

versao="latest"
docker container stop pihole
docker rm pihole
docker rmi pihole/pihole:$versao

# docker volume remove pihole_data
# docker volume create pihole_data

docker run \
  --hostname pihole \
  --name pihole \
  --restart always \
  -p 531:53 \
  -p 8020:80 \
  -e "TZ=America/Sao_Paulo" \
  -e "WEBPASSWORD=123456" \
  -d \
  pihole/pihole:$versao